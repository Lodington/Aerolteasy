{
  "name": "ror2-devtool-ui",
  "version": "1.0.0",
  "description": "Svelte-based UI for Risk of Rain 2 Development Tool",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "WEBKIT_DISABLE_DMABUF_RENDERER=1 tauri dev",
    "tauri:build": "tauri build",
    "build:portable": "tauri build --bundles none",
    "build:windows": "tauri build --target x86_64-pc-windows-gnu",
    "build:installer": "tauri build --bundles nsis",
    "build:clean": "rm -rf src-tauri/target && tauri build --bundles none",
    "build:debug": "tauri build --debug --bundles none"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/cli": "^2.9.4",
    "daisyui": "^5.1.27",
    "svelte": "^4.2.20",
    "tailwindcss": "^4.1.14",
    "vite": "^5.4.11"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "lucide-svelte": "^0.294.0"
  }
}
