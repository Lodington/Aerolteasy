{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "RoR2 DevTool",
  "version": "1.0.0",
  "identifier": "com.ror2.devtool",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Risk of Rain 2 - Development Tool",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "compression": "lzma",
        "displayLanguageSelector": false
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "resources": [],
    "externalBin": [],
    "publisher": "RoR2 DevTool Team",
    "copyright": "Copyright Â© 2024 RoR2 DevTool Team",
    "category": "DeveloperTool",
    "shortDescription": "Development and debugging tool for Risk of Rain 2",
    "longDescription": "A comprehensive development tool for Risk of Rain 2 modding and testing. Provides player management, item spawning, and debugging features."
  }
}
